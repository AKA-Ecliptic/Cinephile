<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trendingAddButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#000"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/trendingTVYear"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/trendingImageView"
        android:text="@string/releaseDate"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/trendingTVTitle"
        android:layout_width="135dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/trendingTVYear"

        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"

        android:text="@string/title"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/trendingTVRating"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/trendingTVTitle"
        android:maxLength="2"
        android:text="@string/rating"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/trendingImageView"
        android:layout_width="70dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>