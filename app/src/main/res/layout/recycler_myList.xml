<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginBottom="1dp"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/myList_text_year"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/myList_check"
        android:text="@string/place_holder"
        android:textColor="@color/colorPrimaryBright"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/myList_text_title"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/myList_text_year"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"

        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/place_holder"
        android:textColor="@color/colorPrimaryBright"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/myList_text_rating"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/myList_text_title"
        android:maxLength="3"
        android:text="@string/place_holder"
        android:textColor="@color/colorPrimaryBright"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/myList_check"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:textColorLink="@color/colorPrimaryBright" />

</RelativeLayout>