<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <ImageView
        android:id="@+id/profile_image_poster"
        android:layout_width="81dp"
        android:layout_height="120dp"
        android:layout_below="@+id/profile_image_backdrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-40dp"
        android:elevation="1dp"
        app:srcCompat="?android:attr/alertDialogIcon" />

    <ImageView
        android:id="@+id/profile_image_backdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="150dp"
        app:srcCompat="?android:attr/alertDialogIcon" />

    <TextView
        android:id="@+id/profile_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_backdrop"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/profile_image_poster"
        android:ellipsize="marquee"
        android:focusable="true"

        android:hint="@string/place_holder"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/profile_text_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_text_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/profile_image_poster"

        android:hint="@string/place_holder"
        android:textAlignment="center"
        android:textSize="15sp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profile_button_seen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_image_backdrop"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@+id/profile_image_poster"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/icon_seen" />

    <FrameLayout
        android:id="@+id/profile_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_image_backdrop"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@+id/profile_button_seen">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/profile_button_rating"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:elevation="0dp"
            android:focusable="true"
            app:backgroundTint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/profile_text_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:elevation="9dp"
            android:hint="@string/place_holder"
            android:textColor="@color/colorPrimaryBright"
            android:textColorHint="@color/colorPrimaryBright"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/profile_progress_rating"
            style="?android:progressBarStyleHorizontal"
            android:progress="50"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:rotation="90"
            android:progressDrawable="@drawable/progress_bar_circle" />
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profile_button_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_image_backdrop"
        android:layout_marginStart="25dp"
        android:layout_marginTop="-25dp"
        android:layout_toEndOf="@+id/profile_frame"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/icon_more_horizontal" />

    <Spinner
        android:id="@+id/profile_spinner_genre_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_text_release_date"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/profile_text_description"

        android:hint="@string/place_holder"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/profile_spinner_genre_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_spinner_genre_1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/profile_text_description"

        android:hint="@string/place_holder"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/profile_spinner_genre_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_spinner_genre_2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/profile_text_description"

        android:hint="@string/place_holder"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/profile_text_description"
        android:layout_width="185dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_image_poster"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"

        android:ems="10"
        android:hint="@string/place_holder"
        android:inputType="none"
        android:minHeight="200dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/profile_text_other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_spinner_genre_3"
        android:layout_alignBottom="@+id/profile_text_description"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/profile_text_description"

        android:ems="10"
        android:hint="@string/place_holder"
        android:inputType="none"
        android:minHeight="50dp"
        android:textSize="12sp" />


</RelativeLayout>
