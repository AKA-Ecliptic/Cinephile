<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <Spinner
        android:id="@+id/movieProfileGenre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileGenre2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/movieProfileDesc"
        android:hint="Genre"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/movieProfileGenre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileGenre"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/movieProfileDesc"
        android:hint="Genre"
        android:textAlignment="center"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/movieProfileGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileYear"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/movieProfileDesc"
        android:hint="Genre"
        android:textAlignment="center"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/movieProfileBackdrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        app:srcCompat="?android:attr/alertDialogIcon" />

    <EditText
        android:id="@+id/movieProfileRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileBackdrop"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:hint="Rating"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="17sp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/movieProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileBackdrop"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/movieProfileRating"
        android:layout_toEndOf="@+id/movieProfileImage"
        android:hint="Title"
        android:textAlignment="center"
        android:textSize="17sp"

        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        />

    <ImageView
        android:id="@+id/movieProfileImage"
        android:layout_width="77dp"
        android:layout_height="114dp"
        android:layout_below="@+id/movieProfileBackdrop"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-57dp"
        app:srcCompat="?android:attr/alertDialogIcon" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/movieProfileSeen"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@drawable/icon_sort_seen" />

    <EditText
        android:id="@+id/movieProfileYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movieProfileDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/movieProfileDesc"
        android:hint="Year"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="17sp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/movieProfileDesc"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieProfileImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="none"
        android:minHeight="200dp"
        android:textSize="12sp" />

</RelativeLayout>